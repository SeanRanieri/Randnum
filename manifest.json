{
    "name": "Randnum",
    "description": "The ultimate random number generator!",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/randnum16.png",
            "32": "/images/randnum32.png",
            "48": "/images/randnum48.png",
            "128": "/images/randnum128.png"
        }
    },
    "icons": {
        "16": "/images/randnum16.png",
        "32": "/images/randnum32.png",
        "48": "/images/randnum48.png",
        "128": "/images/randnum128.png"
    }
}
